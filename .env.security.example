# Security Hardening Environment Variables
# Copy this file to .env and fill in with your values

# ==================== Flask Configuration ====================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this

# ==================== HTTPS/TLS ====================
HTTPS_ENABLED=True
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# ==================== CORS Configuration ====================
ALLOWED_ORIGINS=https://example.com,https://api.example.com

# ==================== Database ====================
DATABASE_URL=postgresql://user:password@localhost:5432/fx_trading_bot
SQLALCHEMY_ECHO=False

# ==================== API Keys & Secrets ====================
API_KEY=your-api-key
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ==================== MT5 Configuration ====================
MT5_SERVER=Your Broker MT5 Server
MT5_ACCOUNT=YOUR_ACCOUNT_NUMBER
MT5_PASSWORD=YOUR_PASSWORD

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/fx_trading_bot/trading.log

# ==================== Security Headers ====================
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=True

# ==================== Session Configuration ====================
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME=3600

# ==================== Monitoring & Logging ====================
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090
